{% extends 'base.html.twig' %}

{% block title %}
	Nargui Five 93 - Nos produits Admin
{% endblock %}

{% block body %}
	
	{# Breadcrumb #}
	{{ include("partials/_breadcrumb.html.twig")}}

	<div class="container">
		<div class="title-block">
			<h1 class="text-center title-custom">
				Catégorie {{ categorie.nom }}
			</h1>
		</div>

        {# Catégories #}
        <div class="bloc-chicha">
            <div class="container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Image</th>
                        <th scope="col">Catégorie</th>
                        <th scope="col">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        {% for produit in produits %}
                            <tr>
                                <td> {{ produit.id }}  </td>
                                <td> {{ produit.nom }} </td>
                                <td>
								    <img class="img-thumbnail-admin" src="{{ produit.image }}" alt="{{ produit.nom }}"/>
                                </td>
                                <td> {{ categorie.nom }} </td>
                                <td> Action </td>
                            </tr>
                        {% else %}
                            <h2> Aucun produit trouvé </h2>
                        {% endfor %}                       
                    </tbody>
                </table>

                {# pagination #}
                <div class="d-flex justify-content-center">
                    {{ knp_pagination_render(produits, 'partials/_pagination.html.twig') }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
