	<div class="container">
		
		{# onglet #}
		<div class="row product-container tab-content" id="myTabContent">
			<div class="tab-pane show active" id="news" role="tabpanel" aria-labelledby="news-tab">New</div>
			<div class="tab-pane fade" id="promos" role="tabpanel" aria-labelledby="promos-tab">Promos</div>
			<div class="tab-pane fade" id="chichas" role="tabpanel" aria-labelledby="chichas-tab">
				<div> Nombre de produits {{ nb_produits_total }} </div>
				{% for produit in produits_bis %}
					<div class="col-md-4">
						<div class="product-item text-center">
							<a class="link-img" href="{{ path("product_show", {slug: produit.slug} ) }}">
								{% if produit.image is null %}
									<img src="{{ vich_uploader_asset(produit, 'imageFile') }}" class="img-fluid" alt="NARGUI FIVE-{{ produit.nom }}">
								{% else %}
									<img src="{{ produit.image }}" class="img-fluid" alt="NARGUI FIVE-{{ produit.nom }}">
								{% endif %}
							</a>
							<h5>
								{{ produit.nom }}
							</h5>
							<span class="product-price">
								NARGUI FIVE
							</span>
							<span>
								Catégorie:
								{{ produit.category.nom }}
							</span>
							<span>
								Sous-catégorie:
								{{ produit.sousCategory.nom }}
							</span>
							<span class="product-price">{{ (produit.price) | number_format(2, ',', '.') }}
								€
							</span>
							<span class="nbr-product">
								en stock
							</span>
							<a class="btn btn-lg btn-block btn-outline-primary link-img" href="{{ path("cart_add", {id : produit.id}) }}" role="button">
								Ajouter au panier
							</a>
						</div>
					</div>
				{% endfor %}	
			</div>
			<div class="tab-pane fade" id="gouts" role="tabpanel" aria-labelledby="gouts-tab">gouts</div>
			<div class="tab-pane fade" id="accesssoires" role="tabpanel" aria-labelledby="accesssoires-tab">accesssoires</div>
			<div class="tab-pane fade" id="electronique" role="tabpanel" aria-labelledby="electronique-tab">electronique</div>
			<div class="tab-pane fade" id="liquide" role="tabpanel" aria-labelledby="liquide-tab">liquide</div>
			<div class="tab-pane fade" id="cbd" role="tabpanel" aria-labelledby="cbd-tab">cbd</div>
			<div class="tab-pane fade" id="pack" role="tabpanel" aria-labelledby="pack-tab">pack</div>
		</div>

		{# pagination #}
		<div class="d-flex justify-content-center">
			{% set preview =  1  %}
			{% set next =  54  %}

			{% if (params['page'] is defined) and params['page'] != 0 %}
				{% set preview =  params['page'] - 1  %}
				{% set next =  params['page'] + 1   %}
				{% set current_page =  params['page']  %}

				{% if params['page'] == 1 %}
					{% set preview =  1  %}
				{% elseif params['page'] == 54 %}
					{% set next =  54  %}
				{% endif %}
			{% endif %}

			<ul class="pagination pagination-lg ">
				<li class="page-item">
					<a class="page-link" href="{{ path('home', {page: preview}) }}" aria-label="Précédent">
						<span aria-hidden="true">&laquo;</span>
						<span class="sr-only">Précédent</span>
					</a>
				</li>
				
				{% for i in 1..( (nb_produits_total/9)|round(0,'ceil') ) %}
					<li class="page-item"><a class="page-link" href="{{ path('home', {page: i  }) }}"> {{i}}</a></li>
				{% endfor %}

				<li class="page-item">
					<a class="page-link" href="{{ path('home', {page: next}) }}" aria-label="Suivant">
						<span aria-hidden="true">&raquo;</span>
						<span class="sr-only">Suivant</span>
					</a>
				</li>
			</ul>
			
			{# {{ knp_pagination_render(produits, 'partials/_pagination.html.twig') }} #}
		</div>
