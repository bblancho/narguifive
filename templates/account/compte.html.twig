{% extends 'base.html.twig' %}

{% block title %} Modifier mon compte - Nargui Five 93 {% endblock %}

{% block body %}

<div>
    <h1> Mon compte </h1>
    {% if is_granted("ROLE_ADMIN") %}
        - <a href="/admin"> Acceder à mon administration </a>  <br/>
    {% endif %}
    <p>
        Bienvenue {{ app.user.nom }} dans votre compte.<br/>
        C'est dans cet espace que vous allez pouvoir gérer toutes vos informations personnelles.
    </p>

    <hr>
    
    <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img class="img-account" src="{{ asset('assets/images/icones/lock.png') }}" alt="modifier mon mot de passe">
                <a href="{{ path('account_password') }}"> Modifier mon mote de passe </a>  <br/>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img class="img-account" src="{{ asset('assets/images/icones/address-book.png') }}" alt="Gérer mes adresses">
                <a href="{{ path('adresse_compte') }}"> Gérer mes adresses </a> <br/>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img class="img-account" src="{{ asset('assets/images/icones/purchase.png') }}" alt="Mes commandes">
                <a href="{{ path('account_order') }}"> Mes commandes </a><br/>
            </div>
        </div>
    </div>

</div>
{% endblock %}
